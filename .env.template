# NSE Stock Analysis Bot - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# ü§ñ TELEGRAM BOT CONFIGURATION (REQUIRED)
# =============================================================================
# Get these from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username

# Webhook Configuration (for production deployment)
TELEGRAM_WEBHOOK_URL=https://yourdomain.com
TELEGRAM_WEBHOOK_PATH=/webhook
TELEGRAM_MAX_CONNECTIONS=100
TELEGRAM_ALLOWED_UPDATES=message,callback_query

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# PostgreSQL Database Settings
DATABASE_PASSWORD=your_secure_database_password
DATABASE_USERNAME=nse_bot
DATABASE_NAME=nse_bot

# Full database URL (alternative to individual settings)
DATABASE_URL=jdbc:postgresql://localhost:5432/nse_bot

# =============================================================================
# üöÄ REDIS CACHE CONFIGURATION (REQUIRED)
# =============================================================================
# Redis Settings
REDIS_PASSWORD=your_secure_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_SSL=false

# =============================================================================
# üåê APPLICATION CONFIGURATION
# =============================================================================
# Domain/Host Configuration
BOT_DOMAIN=yourdomain.com

# Spring Profile (dev, test, prod)
SPRING_PROFILES_ACTIVE=prod

# Server Port
SERVER_PORT=8080

# =============================================================================
# üìä MONITORING & LOGGING (REQUIRED)
# =============================================================================
# Grafana Password
GRAFANA_PASSWORD=your_secure_grafana_password

# Log Level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# üìà NSE API CONFIGURATION (Optional - has defaults)
# =============================================================================
# NSE API Settings (usually defaults are fine)
NSE_API_BASE_URL=https://www.nseindia.com/api
NSE_API_TIMEOUT=10000
NSE_API_RETRY_ATTEMPTS=3
NSE_RATE_LIMIT_RPM=60

# =============================================================================
# üß† ANALYSIS CONFIGURATION (Optional - has defaults)
# =============================================================================
# Analysis Settings
ANALYSIS_CONFIDENCE_THRESHOLD=70.0
ML_MODEL_PATH=/app/models/
ML_PREDICTION_HORIZON=1

# =============================================================================
# ‚ö° PERFORMANCE CONFIGURATION (Optional - has defaults)
# =============================================================================
# JVM Settings
JAVA_OPTS=-Xms512m -Xmx2g -XX:+UseG1GC -XX:+UseContainerSupport

# Database Connection Pool
DB_MAX_POOL_SIZE=50
DB_MIN_IDLE=10

# Cache Settings
CACHE_TTL_STOCK_DATA=120000
CACHE_TTL_HISTORICAL_DATA=1800000
CACHE_TTL_TECHNICAL_ANALYSIS=300000

# =============================================================================
# üîí SECURITY CONFIGURATION (Optional - has defaults)
# =============================================================================
# API Rate Limiting
API_RATE_LIMIT_RPM=30
API_BURST_CAPACITY=10

# Actuator Security (for monitoring endpoints)
MANAGEMENT_SECURITY_ENABLED=true

# =============================================================================
# üîê SSL/TLS CONFIGURATION (Optional - for HTTPS)
# =============================================================================
# SSL Certificate Paths (if using custom certificates)
SSL_CERT_PATH=/etc/ssl/certs/bot-cert.pem
SSL_KEY_PATH=/etc/ssl/private/bot-key.pem

# Let's Encrypt Email (for automatic SSL certificates)
LETSENCRYPT_EMAIL=your-email@domain.com

# =============================================================================
# üíæ BACKUP CONFIGURATION (Optional)
# =============================================================================
# Database Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# üö® NOTIFICATION CONFIGURATION (Optional)
# =============================================================================
# Admin Notification Settings (for system alerts)
ADMIN_TELEGRAM_ID=your_telegram_user_id
ALERT_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# =============================================================================
# üß™ DEVELOPMENT/TESTING OVERRIDES (Only for dev environment)
# =============================================================================
# Set these only for development/testing environments

# Use in-memory database for testing
# DATABASE_URL=jdbc:h2:mem:testdb

# Disable cache for development
# CACHE_TYPE=none

# Enable debug logging for development
# LOG_LEVEL=DEBUG

