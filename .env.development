# NSE Stock Analysis Bot - Development Environment Variables
# Copy this file to .env for development

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_dev_bot_token_here
TELEGRAM_BOT_USERNAME=DevNSEBot

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_PASSWORD=dev_password
DATABASE_USERNAME=nse_bot
DATABASE_NAME=nse_bot_dev
DATABASE_URL=jdbc:postgresql://localhost:5432/nse_bot_dev

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
REDIS_PASSWORD=dev_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_SSL=false

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080
LOG_LEVEL=DEBUG

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =============================================================================
# Enable detailed logging
LOGGING_LEVEL_COM_NSEBOT=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=INFO
LOGGING_LEVEL_ORG_HIBERNATE=DEBUG

# Development API settings
NSE_API_BASE_URL=https://www.nseindia.com/api
NSE_API_TIMEOUT=10000
NSE_API_RETRY_ATTEMPTS=3
NSE_RATE_LIMIT_RPM=60

# Development cache settings (shorter TTL for testing)
CACHE_TTL_STOCK_DATA=60000
CACHE_TTL_HISTORICAL_DATA=300000
CACHE_TTL_TECHNICAL_ANALYSIS=120000

# Development monitoring
GRAFANA_PASSWORD=dev_grafana_password

# =============================================================================
# TESTING OVERRIDES
# =============================================================================
# Reduced rate limits for testing
API_RATE_LIMIT_RPM=100
API_BURST_CAPACITY=20

# Faster user management operations
USER_CLEANUP_SCHEDULE=0 */5 * * * ?  # Every 5 minutes instead of daily
USER_REQUEST_RESET_SCHEDULE=0 0 * * * ?  # Every hour instead of daily